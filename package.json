{
	"name": "subtitle-finder",
	"version": "0.1.0",
	"description": "subtitle CLI to search subtitles in most popular providers",
	"main": "dist/main.js",
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"start": "node .",
		"build": "npm run webpack -- --env mode=production",
		"build:analyzer": "npm run build -- --env presets.analyzer",
		"build:dev": "npm run build -- --env mode=development",
		"dev": "npm run build:dev -- --watch",
		"webpack": "webpack",
		"lint": "eslint --ignore-path .gitignore --ignore-pattern package-lock.json \".\"",
		"typecheck": "concurrently --raw \"npm:typecheck:app\" \"npm:typecheck:tests\"",
		"typecheck:app": "tsc --noEmit -p tsconfig.app.json",
		"typecheck:tests": "tsc --noEmit **/__tests__/*/* **/__snapshots__/*/* **/__mocks__/*/*",
		"format": "npm run prettier -- --write",
		"format:check": "npm run prettier -- --check",
		"prettier": "prettier --ignore-path .gitignore \".\"",
		"test": "jest",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/theFiero/subtitle-finder.git"
	},
	"keywords": [
		"crawler",
		"brazil",
		"subtitles",
		"brasil",
		"subtitle-downloader",
		"pt-br",
		"cli"
	],
	"author": "Fiero <github.gonopores@slmail.me>",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/theFiero/subtitle-finder/issues"
	},
	"homepage": "https://github.com/theFiero/subtitle-finder#readme",
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@tsconfig/node16": "^1.0.1",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"concurrently": "^6.2.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-import-resolver-webpack": "^0.13.1",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-json": "^3.0.0",
		"eslint-plugin-markdown": "^2.2.0",
		"fork-ts-checker-webpack-plugin": "^6.2.10",
		"husky": "^6.0.0",
		"nodemon-webpack-plugin": "^4.5.2",
		"prettier": "^2.3.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"webpack": "^5.38.1",
		"webpack-bundle-analyzer": "^4.4.2",
		"webpack-cli": "^4.7.0",
		"webpack-config-organizer": "^0.2.2",
		"webpack-node-externals": "^3.0.0"
	},
	"webpack-config-organizer": {
		"base": "configs/webpack",
		"presets": {
			"path": ".",
			"prefix": "preset."
		}
	}
}
